@model IEnumerable<SoloCapstoneProject.Models.Order>

@{
    ViewData["Title"] = "ProviderRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Provider Request</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProviderComments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsumerComments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isAppointConfirmed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consumers)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProviderComments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsumerComments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isAppointConfirmed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Consumers.LastName)
            </td>
            <td>
                <a asp-action="ConfirmedAppointment" asp-route-id="@item.OrderId">Confirm Appointment</a>&nbsp;&nbsp;
            </td>
        </tr>
}
    </tbody>
</table>
