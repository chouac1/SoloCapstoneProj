@model SoloCapstoneProject.Models.Order

@{
    ViewData["Title"] = "ProviderEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ProviderEdit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProviderEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />
            <div class="form-group">
                <label asp-for="ServiceDate" class="control-label"></label>
                <input asp-for="ServiceDate" class="form-control" />
                <span asp-validation-for="ServiceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProviderEstimate" class="control-label"></label>
                <input asp-for="ProviderEstimate" class="form-control" />
                <span asp-validation-for="ProviderEstimate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProviderComments" class="control-label"></label>
                <input asp-for="ProviderComments" class="form-control" />
                <span asp-validation-for="ProviderComments" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isAppointConfirmed" /> @Html.DisplayNameFor(model => model.isAppointConfirmed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ConsumerId" class="control-label"></label>
                <select asp-for="ConsumerId" class="form-control" asp-items="ViewBag.ConsumerId"></select>
                <span asp-validation-for="ConsumerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProviderId" class="control-label"></label>
                <select asp-for="ProviderId" class="form-control" asp-items="ViewBag.ProviderId"></select>
                <span asp-validation-for="ProviderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

