@model SoloCapstoneProject.Models.Order

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this appointment?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServiceDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProviderEstimate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProviderEstimate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProviderComments)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProviderComments)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConsumerComments)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConsumerComments)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.isAppointConfirmed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.isAppointConfirmed)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ConsumerRequest" asp-route="@Model.ConsumerId">Back to My Requested Services</a>
    </form>
</div>
