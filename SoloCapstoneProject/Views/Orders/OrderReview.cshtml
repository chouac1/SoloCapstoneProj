@model SoloCapstoneProject.Models.Order

@{
    ViewData["Title"] = "OrderReview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Order Review</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProviderEstimate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProviderEstimate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConsumerComments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConsumerComments)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProviderComments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProviderComments)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.isAppointConfirmed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.isAppointConfirmed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Provider)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Provider.LastName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="ConsumerEdit" asp-route-id="@Model.OrderId">Edit</a> |
    <a asp-action="ConsumerDelete" asp-route-id="@Model.OrderId">Cancel Request</a> |
    <a asp-action="ConsumerRequest" asp-route-id="@Model.OrderId">My Requested Services</a>
</div>
