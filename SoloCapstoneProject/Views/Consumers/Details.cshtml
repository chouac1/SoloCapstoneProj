@model SoloCapstoneProject.Models.Consumer

@{
    ViewData["Title"] = "ConsumerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Location</h1>


<head>
    <style>

        #map {
            height: 300px; /* The height is 400 pixels */
            width: 50%; /* The width is the width of the web page */
        }

        .column {
            float: left;
            width: 50%;
        }

        .row:after {
            content: "";
            display: table;
            clear: both;
        }

    </style>
</head>

<body>
    <div id="map">
            <script>

        var marker;

        function initMap() {

            var defaultMap = { lat: @Model.Latitude, lng: @Model.Longitude };

            var map = new google.maps.Map(
                document.getElementById('map'), { zoom: 15, center: defaultMap });

            marker = new google.maps.Marker({ position: defaultMap, map: map });
        }
            </script>

            <script defer
                    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAMsdaoeePqO9F_hpJsr3xJSPbPfF7dW0U&callback=initMap">
            </script>
        </div>
            

<div>
    <h4>Consumer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Zipcode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Zipcode)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ConsumerId">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.ConsumerId">Delete</a> |
    <a asp-controller="Providers" asp-action="ListOfProviders">Search For Providers</a>

</div>

    </body>
